{
  "name": "sec-filing-analyzer",
  "version": "1.0.0",
  "description": "Cloudflare Workers project for analyzing SEC Form 4 insider trading filings",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "dev:all": "node scripts/dev-all.js",
    "dev:rss": "wrangler dev --config workers/rss-monitor/wrangler.toml --local --persist-to .wrangler/state",
    "dev:processor": "wrangler dev --config workers/form4-processor/wrangler.toml --local --persist-to .wrangler/state",
    "dev:api": "wrangler dev --config workers/api/wrangler.toml --local --persist-to .wrangler/state",
    "dev:alpaca": "wrangler dev --config workers/alpaca-market/wrangler.toml --local --persist-to .wrangler/state --port 8792",
    "dev:auth": "wrangler dev --config workers/auth/wrangler.toml --local --persist-to .wrangler/state --port 8788",
    "dev:signal": "wrangler dev --config workers/signal-processor/wrangler.toml --local --persist-to .wrangler/state --port 8791",
    "test:cron": "curl http://localhost:8787/test-cron",
    "test:processor": "curl http://localhost:8787/test",
    "test:alpaca": "curl http://localhost:8792/health",
    "test:api": "curl http://localhost:8787/api/trades/latest?limit=5",
    "deploy:rss": "cd workers/rss-monitor && wrangler deploy",
    "deploy:processor": "cd workers/form4-processor && wrangler deploy",
    "deploy:api": "cd workers/api && wrangler deploy",
    "deploy:alpaca": "cd workers/alpaca-market && wrangler deploy",
    "deploy:auth": "cd workers/auth && wrangler deploy",
    "deploy:signal": "cd workers/signal-processor && wrangler deploy",
    "deploy": "npm run deploy:rss && npm run deploy:processor && npm run deploy:api && npm run deploy:alpaca && npm run deploy:auth && npm run deploy:signal",
    "db:setup-local": "node scripts/setup-local-db.js",
    "db:seed-local": "wrangler d1 execute sec_filings --local --file=./migrations/seed-dev-data.sql",
    "db:reset-local": "rm -rf .wrangler/state && npm run db:setup-local",
    "db:query-local": "node scripts/query-db.js",
    "db:migrate-local": "wrangler d1 execute sec_filings --local --file=./migrations/initial-schema.sql",
    "db:init": "wrangler d1 create sec_filings",
    "db:migrate": "wrangler d1 execute sec_filings --remote --file=./migrations/initial-schema.sql",
    "db:seed": "wrangler d1 execute sec_filings --remote --file=./migrations/seed-dev-data.sql",
    "db:backup": "wrangler d1 export sec_filings --output ./backups/backup_$(date +%Y%m%d_%H%M%S).sql --remote",
    "db:info": "wrangler d1 info sec_filings"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "fast-xml-parser": "^5.2.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "wrangler": "^4.37.0"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "sec",
    "form4",
    "insider-trading",
    "rss"
  ],
  "author": "Your Name",
  "license": "MIT"
}
